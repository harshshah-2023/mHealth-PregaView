<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="70dp"
    android:padding="12dp"
    android:background="#FFF5F8">

    <LinearLayout
        android:id="@+id/inputLayout"

        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Symptoms"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't worry we are here to help! Select the symptoms you are exprecinsing"
            android:textSize="12sp"
            android:textColor="#333333"
            android:textStyle="normal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="10dp"/>


        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:rowOrderPreserved="false"
            app:columnOrderPreserved="false"
            android:layout_marginBottom="16dp">

        <!-- Frequent Urination Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/urinationCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <CheckBox
                    android:id="@+id/urinationCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Frequent Urination"
                    android:textSize="14sp"
                    android:buttonTint="#4CAF50"
                    android:drawablePadding="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <CheckBox
                    android:id="@+id/thirstCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Excessive Thirst"
                    android:textSize="14sp"
                    android:buttonTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <CheckBox
                    android:id="@+id/tirednessCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiredness"
                    android:textSize="14sp"
                    android:buttonTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <CheckBox
                    android:id="@+id/nauseaCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nausea"
                    android:textSize="14sp"
                    android:buttonTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <CheckBox
                    android:id="@+id/swellingCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Swelling"
                    android:textSize="14sp"
                    android:buttonTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <CheckBox
                    android:id="@+id/weightGainCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rapid Weight Gain"
                    android:textSize="14sp"
                    android:buttonTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <CheckBox
                    android:id="@+id/headacheCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Headache"
                    android:textSize="14sp"
                    android:buttonTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <CheckBox
                    android:id="@+id/blurredVisionCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blurred Vision"
                    android:textSize="14sp"
                    android:buttonTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <CheckBox
                    android:id="@+id/abdominalPainCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abdominal Pain"
                    android:textSize="14sp"
                    android:buttonTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <CheckBox
                    android:id="@+id/shortnessBreathCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shortness of Breath"
                    android:textSize="14sp"
                    android:buttonTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <CheckBox
                    android:id="@+id/pelvicPressureCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pelvic Pressure"
                    android:textSize="14sp"
                    android:buttonTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <CheckBox
                    android:id="@+id/backacheCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Backache"
                    android:textSize="14sp"
                    android:buttonTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <CheckBox
                    android:id="@+id/contractionsCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contractions"
                    android:textSize="14sp"
                    android:buttonTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <CheckBox
                        android:id="@+id/vomitingCheck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vomiting"
                        android:textSize="14sp"
                        android:buttonTint="#4CAF50"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.gridlayout.widget.GridLayout>













        <Button
            android:id="@+id/predictButton"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Predict Condition"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:textSize="16sp"
            android:paddingVertical="12dp"/>



        <!-- Enhanced Prediction Result Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/predictionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_heart_rate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Risk of: "
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/predictionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#333"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Health Status Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/healthStatusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/bg_status_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health Status"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#388E3C"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/healthStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#333"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recommendations Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/recommendationCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_recommend_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommendations"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/recommendationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#333"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Emergency Action Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/emergencyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone"
            android:backgroundTint="#FFEBEE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_warning" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency Actions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/emergencyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If you're experiencing severe symptoms, please contact a healthcare professional immediately."
                    android:textSize="15sp"
                    android:textColor="#333"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/callDoctorButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Call Emergency Services"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#D32F2F"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/baseline_call_24"
                    android:drawablePadding="8dp"
                    android:paddingVertical="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/navigatetoPostpartum"
            android:text="PostPartum Check"
            android:textColor="@color/black"
            android:backgroundTint="#D32F2F"
            />





    </LinearLayout>
</ScrollView>